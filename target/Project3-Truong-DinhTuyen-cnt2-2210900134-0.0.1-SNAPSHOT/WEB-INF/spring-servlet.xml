<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
          http://www.springframework.org/schema/beans  
          http://www.springframework.org/schema/beans/spring-beans.xsd  
          http://www.springframework.org/schema/context  
          http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Quét package chứa Controller -->
    <context:component-scan base-package="com.springmvc.controllers"/>

    <!-- Cấu hình View Resolver -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- Cấu hình DataSource -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/tdt_2210900134"/>
        <property name="username" value="root"/>
        <property name="password" value="loc10052009"/>
    </bean>

    <!-- Cấu hình JdbcTemplate -->
    	<bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="db"></property>
	</bean>

    <!-- Cấu hình DAO -->
    <bean id="tdt_NguoiDungDAO" class="com.springmvc.dao.Tdt_NguoiDungDAO">
        <constructor-arg ref="jdbcTemplate" />
    </bean>
    <bean id="tdt_PhongHocDAO" class="com.springmvc.dao.Tdt_PhongHocDAO">
        <constructor-arg ref="jdbcTemplate" />
    </bean>
    <bean id="tdt_ThietBiDAO" class="com.springmvc.dao.Tdt_ThietBiDAO">
        <constructor-arg ref="jdbcTemplate" />
    </bean>
    <bean id="tdt_YeuCauSuaDAO" class="com.springmvc.dao.Tdt_YeuCauSuaDAO">
        <constructor-arg ref="jdbcTemplate" />
    </bean>
    <bean id="tdt_LichSuDatPhongDAO" class="com.springmvc.dao.Tdt_LichSuDatPhongDAO">
        <constructor-arg ref="jdbcTemplate" />
    </bean>

</beans>
